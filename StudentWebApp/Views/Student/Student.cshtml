
@model  StudentWebApp.Context.tbl_student

@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .error {
        color:red;
    }
</style>
<h2>Students</h2>

@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{
    <div class="container">

        <div class="form-group">
            <label>Name</label>
            @Html.ValidationMessageFor(model => model.Fname,"", new { @class = "error" })
            @Html.TextBoxFor(model => model.Fname, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.ValidationMessageFor(model => model.Email, "", new {@class="error"})
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        </div>
        <div>
            <label>Mobile</label>
            @Html.ValidationMessageFor(model => model.Mobile, "", new {@class="error"})
            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
        </div>

        <div class="form-group">

            <label>Description</label>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Clear</button>
        </div>
    </div>
}



